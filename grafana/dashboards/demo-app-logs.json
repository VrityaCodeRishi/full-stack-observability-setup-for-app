{
  "uid": "demoapplogs",
  "title": "Demo Orders Service Logs",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "browser",
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Live Structured Logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{service=\"$service\"}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 15, "w": 24, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Error Logs (5m)",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum(count_over_time({service=\"$service\", level=\"error\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 20 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 15 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Logs by Level",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({service=\"$service\"}[$__interval]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "logs/s"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 16, "x": 8, "y": 15 }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "refresh": 1,
        "query": "label_values({service!=\"\"}, service)",
        "current": {
          "text": "demo-orders-api",
          "value": "demo-orders-api",
          "selected": true
        }
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  }
}
