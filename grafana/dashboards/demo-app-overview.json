{
  "uid": "demoappoverview",
  "title": "Demo Orders Service Overview",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "browser",
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Request Rate by Status",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(demo_request_total{service=\"$service\"}[5m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Error Rate %",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(demo_request_errors_total{service=\"$service\"}[5m])) / sum(rate(demo_request_total{service=\"$service\"}[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal"
      },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "p90 Latency (seconds)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.9, sum(rate(demo_request_duration_seconds_bucket{service=\"$service\",route=\"$route\"}[5m])) by (le))",
          "refId": "A",
          "legendFormat": "p90 latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "max": null,
          "min": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 9, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Latest Order Value",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "demo_order_last_value_usd{service=\"$service\"}",
          "refId": "A",
          "legendFormat": "{{region}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 9, "x": 9, "y": 8 }
    },
    {
      "id": 5,
      "type": "table",
      "title": "Firing Alerts",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\"}",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 15 }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "refresh": 1,
        "query": "label_values(demo_request_total, service)",
        "current": {
          "text": "demo-orders-api",
          "value": "demo-orders-api",
          "selected": true
        }
      },
      {
        "name": "route",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "refresh": 1,
        "query": "label_values(demo_request_total{service=\"$service\"}, route)",
        "current": {
          "text": "/orders",
          "value": "/orders",
          "selected": true
        }
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  }
}
